[out:json][timeout:180];

// Définir la région Île-de-France
{{geocodeArea:Île-de-France}}->.idf;

// 1️⃣ Toutes les communes de la région
rel(area.idf)
  ["boundary"="administrative"]
  ["admin_level"="8"]
  ->.communes;

// 2️⃣ Tous les arrondissements de Paris
{{geocodeArea:Paris}}->.paris;
rel(area.paris)
  ["boundary"="administrative"]
  ["admin_level"="9"]
  ->.arrondissements;

// Combiner les deux ensembles
(.communes; .arrondissements;);
out geom;